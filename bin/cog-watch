#!/bin/bash
#!/

if [ -e Cogfile ]; then
    source ./Cogfile
fi

# Check if gulpfile.js exist
if [ -f 'gulpfile.js' ]; then
    echo 'ðŸ’¬  Found gulpfile.js ...'
    WATCH_TASK="gulp watch"

  elif [ -f 'Gruntfile.js' ]; then
    echo 'ðŸ’¬  Found Gruntfile.js ...'
    WATCH_TASK="grunt watch"

fi
( $WATCH_TASK "${@}" )
