#!/bin/bash
CMD=${1:-help}
dir=$(pwd)


# Include all scripts inside the tools folder
for file in ./tools/*; do
  source $file
done

# Drop next argument
shift

# Check if /bin exist in current directory
if [ -f "./bin/cog-$CMD" ]; then
    # Overwrite script exist. Run this
    ( "./bin/cog-$CMD" "${@}")
  else
    # Execute default scripts
    ( "cog-$CMD" "${@}" )
fi
