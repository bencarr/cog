#!/bin/bash

set -e

if [ -e Cogfile ]; then
  source ./Cogfile
fi

WEBSERVER_HOST=${WEBSERVER_HOST:-127.0.0.1}
WEBSERVER_PORT=${WEBSERVER_PORT:-8000}
DOCUMENT_ROOT=${DOCUMENT_ROOT:-./}

while true ; do
    case "$1" in
        -h|--host)
            case "$2" in
                "") WEBSERVER_HOST='127.0.0.1' ; shift 2 ;;
                *) WEBSERVER_HOST=$2 ; shift 2 ;;
            esac ;;
        -p|--port)
            case "$2" in
                "") WEBSERVER_PORT='8000' ; shift 2 ;;
                *) WEBSERVER_PORT=$2 ; shift 2 ;;
            esac ;;
        -d|--dir)
            case "$2" in
              # look for public folder
                "") DOCUMENT_ROOT='./' ; shift 2 ;;
                *) DOCUMENT_ROOT=$2 ; shift 2 ;;
            esac ;;
        --) shift ; break ;;
	"") break ;;
        #*) echo "Internal error!" ; exit 1 ;;
    esac
done

pushd $DOCUMENT_ROOT > /dev/null
php -S $WEBSERVER_HOST:$WEBSERVER_PORT
