#!/bin/bash

# Get latest version
VERSION=$(git describe)
# Replace points, split into array
a=( ${VERSION//./ } )

# Check if arugment passed with cog tag
if [ -z "$1" ];
  then
    echo $VERSION
  elif [[ $1  == 'major' ]]; then
    ((a[0]++))
  elif [[ $1  == 'minor' ]]; then
    ((a[1]++))
  elif [[ $1  == 'patch' ]]; then
    ((a[2]++))
  elif [[ $1  == 'push' ]]; then
    git push --tags
    exit 0
   else
     echo 'Error: cog tag [ major | minor | patch ]'
     exit 0
fi

NEW_VERSION=${a[0]}.${a[1]}.${a[2]}
echo $VERSION. ' -> '.$NEW_VERSION
git tag $NEW_VERSION
